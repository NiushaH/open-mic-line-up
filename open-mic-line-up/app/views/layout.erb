  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>OpenMicWorld</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="nav">
    <% if logged_in? %>
      <% current_user %>
      <h4>
        <ul>
          <li><a href="/" >OpenMicWorld Homepage</a> &emsp; <a href="/performances/new">Register a New Performance</a> &emsp; <a href="/users/<%= @current_user.id %>">See My Performances & Account</a> </li> 
        </ul>
      </h4>
    <% else %>
      <h4>
        <ul>
          <li><a href="/">OpenMicWorld Homepage</a> &emsp; <a href="/login">Log into OpenMicWorld</a> &emsp; <a href="/signup">Signup for OpenMicWorld</a> </li> 
        </ul>
      </h4>
    <%end %>
    </div>

    <div class="wrapper">

        <%= yield %>
    
      <div class="">
        <% if logged_in? %>
          <br>
          <br>
          <a class="button" href="/logout"> Log Out </a>
        <% else %>
        <h2></h2>
          <h3>Ready to perform?  Login to sign up to sing at an upcoming open mic night.</h3>
          <a class="button" href="/login">Log In</a>
          <br>
          <br>
          <h3>Need an account?</h3>
          <a class="button" href="/signup">Sign Up Here</a>
        <%end %>
      </div>

      <footer class="branding">
        <small>&copy; 2020 <strong><a class="button" href="/" style="color:black;text-decoration: none">OpenMicWorldApp</a></strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
